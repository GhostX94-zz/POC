
@{
    ViewBag.Title = "TipoEmpleado";
    @RenderPage("~/Views/Home/SideBar.cshtml")
}

<link href="~/assets/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<section class="content">
    <div class="container">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>TipoEmpleado</strong></h2>
                    </div>
                    <div class="body">
                        <h2 class="card-inside-title">Tipo de Empleados</h2>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Nombre" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Puesto" />
                                </div>
                                <div class="form-group">
                                    <select class="form-control show-tick">
                                        <option value="">-- Tipo de Empleado --</option>
                                        <option value="10">IT</option>
                                        <option value="20">Licenciado</option>
                                        <option value="30">Ingeniero</option>
                                        <option value="40">Operaciones</option>
                                        <option value="50">Administrativo</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Dependencia" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Matricula" />
                                </div>

                                <button type="button" class="btn btn-raised btn-primary btn-round waves-effect">Guardar</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

