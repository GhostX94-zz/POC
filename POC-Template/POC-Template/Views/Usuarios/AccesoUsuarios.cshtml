
@{
    ViewBag.Title = "AccesoUsuarios";
    @RenderPage("~/Views/Home/SideBar.cshtml")
}

<link href="~/assets/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<section class="content">
    <div class="container">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>AccesoEmpleado</strong></h2>
                    </div>
                    <div class="body">
                        <h2 class="card-inside-title">Acceso de Usuarios</h2>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Empleado" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Usuario" />
                                </div>
                                <div class="form-group">
                                    <select class="form-control show-tick">
                                        <option value="">-- Tipo de Acceso de Usuario --</option>
                                        <option value="10">Administrador</option>
                                        <option value="20">Empleado</option>
                                     
                                    </select>
                                </div>
                                

                                <button type="button" class="btn btn-raised btn-primary btn-round waves-effect">Guardar</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

